{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "outDir": "dist_utils",
    "declaration": true,
  },
  "include": ["src/tuyo"],
  "exclude": ["src/tuyo/*.test.ts", "src/tuyo/util/*.test.ts", "src/tuyo/internal/*.test.ts"],
}
